{
  "name": "db-kalite-asistani-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "prep": "rm -rf ui && mkdir -p ui && cp -r ../frontend/dist/* ui/ && mkdir -p bundles/backend && cp ../bundles/backend/backend.exe bundles/backend/backend.exe",
    "dist": "electron-builder -w"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron": "^30.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.0"
  },
  "build": {
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "ui/**"
    ],
    "extraResources": [
      { "from": "bundles/backend/backend.exe", "to": "backend/backend.exe" },
      { "from": "../Guidelines/default", "to": "guidelines-default" },
      { "from": "../Prompts/default", "to": "prompts-default" }
    ],
    "win": { "target": "nsis" },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh"
    }
  }
}
